<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
android:background="@drawable/splashback1"

    tools:context=".DiabetesInfo" >



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            app:cardElevation="500dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/picdiabetes" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Type of diabetes"
                    android:textAlignment="center"
                    android:textColor="#1E1E1E"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Learn about the types of diabetes diabetes and it's defifnition"
                    android:textAlignment="center"
                    android:textColor="#1E1E1E"
                    android:textSize="19dp"
                    tools:ignore="HardcodedText"
                    android:gravity="center_horizontal" />


                <android.widget.Button
                    android:onClick="dtype"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                  android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/glow"
                    android:text="Learn more"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold">

                </android.widget.Button>


            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardElevation="500dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/symptoms" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Diabetic Symptoms"
                    android:textAlignment="center"
                    android:textColor="#1E1E1E"
                    android:textSize="25dp"
                    tools:ignore="HardcodedText"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Do you want to know the symptoms of diabetes?"
                    android:textAlignment="center"
                    android:textColor="#1E1E1E"
                    android:textSize="20dp"
                    tools:ignore="HardcodedText"
                    android:gravity="center_horizontal" />


                <android.widget.Button
                    android:onClick="stype"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/glow"
                    android:text="Learn more"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardElevation="500dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/diet" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Diabetes Diet"
                    android:textAlignment="center"
                    android:textColor="#1E1E1E"
                    android:textSize="25dp"
                    tools:ignore="HardcodedText"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Learn the most appropriate diet for diabetic patients"
                    android:textAlignment="center"
                    android:textColor="#1E1E1E"
                    android:textSize="20dp"
                    tools:ignore="HardcodedText"
                    android:gravity="center_horizontal" />
                <android.widget.Button
                    android:onClick="diettype"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/glow"
                    android:text="Learn more"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardElevation="500dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/exerciseing" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Diabetic Reversal"
                    android:textAlignment="center"
                    android:textColor="#1E1E1E"
                    android:textSize="25dp"
                    tools:ignore="HardcodedText"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Do u know it is possible to reverse diabetes?"
                    android:textAlignment="center"
                    android:textColor="#1E1E1E"
                    android:textSize="20dp"
                    tools:ignore="HardcodedText"
                    android:gravity="center_horizontal" />
                <android.widget.Button
                    android:onClick="reversetype"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/glow"
                    android:text="Learn more"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"/>


            </LinearLayout>




        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>
